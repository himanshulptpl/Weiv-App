<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#25292c"
     >
    
    <ImageView
        android:id="@+id/go_to_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/title_activity_camera"
        android:src="@drawable/ic_action_cancel" />

    <TextView
        android:id="@+id/cam_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/go_to_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:text="@string/title_activity_home" />

</RelativeLayout>
